pipeline {
  agent {
        node {
            label 'team:makerspace'
        }
    }
  parameters {
        gitParameter name: 'BRANCH_TAG',
                     type: 'PT_BRANCH_TAG',
                     defaultValue: 'master'
        choice(choices: ['test', 'qa', 'beta', 'prod'], description: 'Tier to deploy tiles to', name: 'TIER')
  }
  stages {
    stage('Clean Workspace') {
	    steps{
		    cleanWs()
	    }
	  }
    stage('Checkout repo and pull from S3') {
      steps {
         checkout([$class: 'GitSCM',
                          branches: [[name: "${params.BRANCH_TAG}"]],
                          doGenerateSubmoduleConfigurations: false,
                          extensions: [],
                          gitTool: 'Default',
                          submoduleCfg: [],
                          userRemoteConfigs: [[url: 'https://github.com/usgs-makerspace/wbeep-processing']]
                        ])
        sh 'aws s3 sync s3://prod-owi-resources/resources/Application/wbeep/${TIER}/hru_shape . --exclude "*" --include "hrus.geojson"'
      }
    }
    stage('create tileset') {
      agent {
        docker {
          image 'code.chs.usgs.gov:5001/wma/iidd/wbeep-data-processing:tippecanoe-latest'
          registryUrl 'https://code.chs.usgs.gov:5001/wma/iidd/wbeep-data-processing'
          registryCredentialsId 'jenkins_ci_access_token'
          alwaysPull true
          reuseNode true
        } 
      }
      steps {
        sh '''
          tippecanoe -Z0 -z6 --no-feature-limit --no-tile-size-limit --no-tiny-polygon-reduction --detect-shared-borders --simplify-only-low-zooms --simplification=5 --force --output-to-directory tile_dir_simple5 hrus.geojson
          '''
      }
    }
    stage('push to S3') {
      steps { 
        sh 'aws s3 sync tile_dir_simple5 s3://prod-owi-resources/resources/Application/wbeep/${TIER}/hru_shape/tile_dir_simple5'
      }
    }
    stage('build downstream job') {
      steps { 
        sh "echo ${params.BRANCH_TAG}"
        build job: 'process_model_output', 
              parameters: [string(name: 'TIER', value: String.valueOf(TIER)),
              string(name: 'BRANCH_TAG', value: "${params.BRANCH_TAG}")]
      }
    }
  }
}
